<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @list.url %>);">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container">
  <%= link_to "Add a movie",  new_list_bookmark_path(@list), :class => "btn btn-success mt-3 align-center"%>
</div>

<div class="container mt-3">
  <div class="cards">
    <% @list.movies.each do |movie|%>
      <div class='card-category' style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= movie.poster_url %>)">
        <%= movie.title %>
      </div>
      <%# <%= link_to "+",  bookmark_path(movie.bookmark), data: {:confirm => 'Are you sure?'}, :method => :delete %>
     <% end %>
  </div>
</div>
